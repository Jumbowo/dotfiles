PLUGIN_DIR="$HOME/.config/sketchybar/plugins"
ITEM_DIR="$HOME/.config/sketchybar/items"
FONT_FACE="Hack Nerd Font"

# Bar appearance
sketchybar --bar height=35            \
                 margin=0             \
                 blur_radius=0        \
                 position=top         \
                 sticky=on            \
                 padding_left=3       \
                 padding_right=3      \
                 color=0x00000000

# Changing defaults
sketchybar --default icon.font="$FONT_FACE:Bold:17.0"      \
                     icon.color=0xffffffff                 \
                     label.font="$FONT_FACE:Bold:14.0"     \
                     label.color=0xFFEEFFFF                \
                     padding_left=3                        \
                     padding_right=3                       \
                     y_offset=0                            \
                     label.padding_left=4                  \
                     label.padding_right=10                \
                     icon.padding_left=10                  \
                     icon.padding_right=6                  \
                     background.drawing=on                 \
                     background.height=28                  \
                     background.color=0xCC000000           \
                     background.corner_radius=15            \
                     background.padding_left=3             \
                     background.padding_right=3            

# Left items
sketchybar --add item space left                                   \
           --set space           script="$PLUGIN_DIR/space.sh"     \
                                 label.padding_left=10             \
                                 icon.drawing=off                  \
           --subscribe space space_change

sketchybar --add item front_app left                               \
           --set front_app       script="$PLUGIN_DIR/front_app.sh" \
                                 label.padding_left=12             \
                                 icon.drawing=off                  \
           --subscribe front_app front_app_switched                \

           source "$ITEM_DIR/spotify.sh"

# Right items
sketchybar --add item clock right                                  \
           --set clock   update_freq=30                            \
                         icon=ó±›¡                                    \
                         icon.color=0xffed8796                     \
                         script="$PLUGIN_DIR/clock.sh"             \
                                                                   \
           --add item battery right                                \
           --set battery script="$PLUGIN_DIR/battery.sh"           \
                         update_freq=120                           \
                         icon.color=0xffa6e3a1                     \
           --subscribe battery system_woke power_source_change     \

sketchybar --update
